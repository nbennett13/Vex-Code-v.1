int LX = 0;
int LY = 0;
int RX = 0;
int RY = 0;


while(1=1)
{
/*
Ternary Statment: value = (true boolean) ? (false boolean) : value 
if the ablsolute value of one of these vexRT channels is greater than the threshold, assign the value 
if it is not greater than threshold, make it 0
*/
//sourced from team 1900w

LX = (abs(vexRT[Ch4]) > threshold) ? vexRT[Ch4] : 0; //left joystick x-axis
LY = (abs(vexRT[Ch3]) > threshold) ? vexRT[Ch4] : 0; //left joystick y-axis

RX = (abs(vexRT[Ch1]) > threshold) ? vexRT[Ch1] : 0; //right joystick x-axis
RY = (abs(vexRT[Ch2]) > threshold) ? vexRT[Ch2] : 0; //right joysstick y-axis

motor[FL] = LY;
motor[BR] = LY;
motor[BL] = LY;
motor[BR] = LY;


}
